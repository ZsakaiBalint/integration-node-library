{
    "compilerOptions": {
        "target": "ES2022",
        "module": "Node16",
        "moduleResolution": "Node16",
	    "strict": true,
        "esModuleInterop": true,
    	"skipLibCheck": true,
	    "rootDir": "./",
        "outDir": "./dist",
        "allowJs": true
    },
    "include": [
        "./*.ts",
        "./examples/**/*.ts",
        "./lib/**/*.ts",
        "./test/**/*.ts"
    ],          
    "exclude": ["node_modules"]
}