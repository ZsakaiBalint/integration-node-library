{
    "compilerOptions": {
        "target": "es6",            // Specify ECMAScript target version
        "module": "commonjs",       // Use CommonJS module system (for Node.js)
	    "strict": true,             // Enable strict type-checking options
    	"esModuleInterop": true,    // Allow default imports from CommonJS
    	"skipLibCheck": true,       // Skip type checks of declaration files
	    "rootDir": "./lib",         // Directory for TypeScript source files
        "outDir": "./dist/",        // Output directory for compiled JS
        "allowJs": true             // Allow a partial TypeScript and JavaScript codebase
    },
    "include": ["./lib/"],          // Include all TypeScript files in src/
    "exclude": ["node_modules"]     // Exclude node_modules
}